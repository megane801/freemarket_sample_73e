.account
  = render 'partial/new-header'
  .account-page
    .account-page__inner
      .account-page__inner__title
        %h2 新規会員登録
      .account-page__inner__user-form
        = form_for(@user, url: user_registration_path) do |f|
          = render "devise/shared/error_messages", resource: @user
          %h3 ユーザー情報
          .field
            .field-label
              = f.label :ニックネーム
              %span.hissu 必須 
            .field-input
              = f.text_field :nickname, autofocus: true 
          .field
            .field-label
              = f.label :メールアドレス
              %span.hissu 必須 
            .field-input
              = f.email_field :email, placeholder: "メールアドレス"
          .field
            .field-label
              = f.label :パスワード
              %span.hissu 必須 
            .field-input
              = f.password_field :password, autocomplete: "off",placeholder: "英数字７文字以上"
          .field
            .field-label
              = f.label :確認用パスワード
              %span.hissu 必須 
            .field-input
              = f.password_field :password_confirmation, autocomplete: "off",placeholder: "確認用パスワードをしてください"
          %h3 本人確認情報
          .full_name
            .field
              .field-label
                = f.label :姓
                %span.hissu 必須 
              .field-input
                = f.text_field :first_name,placeholder: "山田"
            .field
              .field-label
                = f.label :名
              .field-input
                = f.text_field :name,placeholder: "太郎"
          .full_name
            .field
              .field-label
                = f.label :姓
                %span.hissu 必須 
              .field-input
                = f.text_field :first_name_kana,placeholder: "やまだ"
            .field
              .field-label
                = f.label :名
              .field-input
                = f.text_field :name_kana,placeholder: "たろう"
          .field
            .field-label
              = f.label :生年月日
              %span.hissu 必須 
            .field-input
              = f.date_select	 :birth              
          .actions
            = f.submit "NEXT", class: 'btn'
  = render 'partial/new-footer'