.account
  = render 'partial/new-header'
  .account-page
    .account-page__inner
      .account-page__inner__title
        %h2 新規会員登録
      .account-page__inner__user-form
        = form_for(@address) do |f|
          = render "devise/shared/error_messages", resource: @address
          %h3 商品送付先住所情報
          .full_name
            .field
              .field-label
                = f.label :姓
                %span.hissu 必須 
              .field-input
                = f.text_field :send_first_name,placeholder: "山田"
            .field
              .field-label
                = f.label :名
              .field-input
                = f.text_field :send_name,placeholder: "太郎"
          .full_name
            .field
              .field-label
                = f.label :姓
                %span.hissu 必須 
              .field-input
                = f.text_field :send_first_name_kana,placeholder: "ヤマダ"
            .field
              .field-label
                = f.label :名
              .field-input
                = f.text_field :send_name_kana,placeholder: "タロウ"
          .field
            .field-label
              = f.label :郵便番号
              %span.hissu 必須 
            .field-input
              = f.number_field :postal_code,placeholder: "2770098ハイフンなし"

          .field
            .field-label
              = f.label :都道府県
              %span.hissu 必須 
            .field-input
              = f.text_field :prefecture,placeholder: "東京都"
          .field
            .field-label
              = f.label :市区町村
              %span.hissu 必須 
            .field-input
              = f.text_field :city,placeholder: "__区" 
          .field
            .field-label
              = f.label :番地
              %span.hissu 必須 
            .field-input
              = f.text_field :block,placeholder: "__丁目__番地"
          .field
            .field-label
              = f.label :マンションやビル名など
            .field-input
              = f.text_field :building,placeholder: "___マンション___号室"
          .field
            .field-label
              = f.label :電話番号
            .field-input
              = f.text_field :phone_number,placeholder: "ハイフンなし"              
              
          .actions
            = f.submit "新規会員登録", class: 'btn'
  = render 'partial/new-footer'