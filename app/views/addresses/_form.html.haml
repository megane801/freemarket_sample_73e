= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :postal_code
    = f.number_field :postal_code
  .field
    = f.label :prefecture
    = f.text_field :prefecture
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :block
    = f.text_field :block
  .field
    = f.label :building
    = f.text_field :building
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :send_first_name
    = f.text_field :send_first_name
  .field
    = f.label :send_name
    = f.text_field :send_name
  .field
    = f.label :send_first_name_kana
    = f.text_field :send_first_name_kana
  .field
    = f.label :send_name_kana
    = f.text_field :send_name_kana
  .actions
    = f.submit 'Save'
